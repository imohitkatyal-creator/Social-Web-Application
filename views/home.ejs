<link rel="stylesheet" href="./css/home.css">
<div id="home-container">
        <section id="feed-post">
                <h4>Posts</h4>
                <% if(locals.user){%>
                <form action="/posts/create" id="new-post-form" method="POST">
                        <textarea name="content" id="textarea-css" cols="40" rows="3" placeholder="What's on your mind,<%=user.name%>" required></textarea>
                        <input type="submit" value="Post">
                </form>
                <%}%>
                <div id="post-list-container">
                <ul id="posts-list">
                        <% for(post of posts){%>
        
                        <%- include('_post') -%>
                        
                        <%}%>
                </ul>
                </div>
        </section>
        <section id="friend-list">
                <h4>Friends</h4>
                <% for(u of all_users){%>
                        <p><a href="/users/profile/<%= u.id%>"><%= u.name%></a></p>
                
                <%}%>
        </section>
</div>
